<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RowOpinionActivity"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                app:titleTextColor="@color/white"
                app:title="국민 의견"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:background="@color/main"
                >
                <TextView
                    android:id="@+id/tv_voting"
                    android:textSize="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right"
                    android:text="투표하기"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_row_name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="법률안"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_total_cnt"
                        android:text="전체의견 : 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_agree"
                        android:text="찬성 : 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_disagree"
                        android:text="반대 : 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <org.eazegraph.lib.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    app:egBarWidth="20dp"
                    app:egEnableScroll="true"
                    app:egFixedBarWidth="true"
                    app:egLegendHeight="40dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_left"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                >
                <android.widget.Button
                    android:background="@color/sub2"
                    android:text="찬성"
                    android:id="@+id/btn_committee"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"/>
                <android.widget.Button
                    android:background="@color/white"
                    android:text="반대"
                    android:id="@+id/btn_committee2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tab_right"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                >
                <android.widget.Button
                    android:background="@color/white"
                    android:text="찬성"
                    android:id="@+id/btn_committee_left"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"/>
                <android.widget.Button
                    android:background="@color/sub2"
                    android:text="반대"
                    android:id="@+id/btn_committee2_right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/sub2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_margin="5dp"
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>